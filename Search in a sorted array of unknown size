Time complexity = O(1)
Space complexity = O()

class Solution {
public:
    int binarySearch(int left, int right, int target, const ArrayReader& reader)
    {

        while (left <= right)
        {
            int mid = left + (right-left)/2;
            if (target == reader.get(mid))
            {
                return mid;
            }

            if ( target > reader.get(mid))
            {
                left = mid + 1;
            }
            else
            {
                right = mid - 1;
            }
        }
        return -1;
    }

    int search(const ArrayReader& reader, int target) {
        int left = 0;
        int right = 1;

        while (target > reader.get(right))
        {
            left = right;
            right = right*2;
        }

        return binarySearch(left, right, target, reader);
    }
};
