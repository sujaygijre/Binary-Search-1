// Time complexity = O(mn)
// space complexity = O(1)
class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        int rows = matrix.size();
        if (rows == 0)
            return false;

        int cols = matrix[0].size();
        if (cols == 0)
            return false;

        int index, element;
        int left = 0;
        int right = (rows * cols) -1;

        while (left <= right)
        {
            index = (left + right)/2;
            element = matrix[index/cols][index%cols];

            if (element == target)
            {
                return true;
            }
            else
            {
                if ( target < element)
                {
                    right = index - 1;
                }
                else 
                {
                    left = index + 1;
                }
            }
        }
        return false;
    }
};
